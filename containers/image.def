Bootstrap: docker
From: python:latest
%post
    apt-get update && apt-get install -y python3 python3-pip git gcc
    apt-get clean && rm -rf /var/lib/apt/lists/*

    pip3 install --upgrade pip
    pip3 install numpy
    pip3 install pandas
    pip3 install scikit-learn 
    pip3 install tqdm
    pip3 install dask dask_ml
    pip3 install tables
    pip3 install duckdb

%runscript
    echo "Running script $*"
    exec python3 "$@"
